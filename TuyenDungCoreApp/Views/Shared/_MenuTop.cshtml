<script>
    function logout() {
        // Gửi yêu cầu POST đến phương thức Logout trên backend
        fetch("/Logout", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"  // Đảm bảo gửi đúng kiểu content
            },
            // Body không cần thiết nếu bạn chỉ muốn logout đơn giản
            body: null
        })
            .then(response => {
                if (response.ok) {
                    // Nếu logout thành công, chuyển hướng về trang login
                    window.location.href = "/Login";  // Thay đổi URL cho phù hợp với ứng dụng của bạn
                } else {
                    console.error("Logout failed", response.status);
                }
            })
            .catch(error => {
                console.error("Error during logout:", error);
            });
    }
</script>